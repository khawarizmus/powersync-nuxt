{
  "name": "powersync-nuxt",
  "version": "1.0.0",
  "description": "Powersync Nuxt module",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/khawarizmus/powersync-nuxt"
  },
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types.d.mts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "nuxi dev playground --port 3001",
    "play:prod": "npm run prepack && nuxi dev playground",
    "release": "npm run prepack && changelogen --release && npm publish && git push --follow-tags",
    "release:strict": "npm run lint && npm run test && npm run prepack && changelogen --release && npm publish && git push --follow-tags",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@iconify-json/carbon": "^1.2.13",
    "@journeyapps/wa-sqlite": "^1.2.6",
    "@nuxt/devtools-kit": "^2.6.2",
    "@nuxt/devtools-ui-kit": "^2.6.2",
    "@nuxt/kit": "^4.0.3",
    "@powersync/vue": "^0.4.0",
    "@powersync/web": "^1.25.1",
    "defu": "^6.1.4",
    "destr": "^2.0.5",
    "sirv": "^3.0.1"
  },
  "peerDependencies": {
    "@journeyapps/wa-sqlite": "^1.2.6",
    "@powersync/vue": "^0.4.0",
    "@powersync/web": "^1.25.1",
    "nuxt": "^4.0.3"
  },
  "devDependencies": {
    "@nuxt/devtools": "^2.6.2",
    "@nuxt/eslint-config": "^1.9.0",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.0.3",
    "@nuxt/test-utils": "^3.19.2",
    "changelogen": "^0.6.2",
    "eslint": "^9.33.0",
    "nuxt": "^4.0.3",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitepress": "2.0.0-alpha.12",
    "vitest": "^3.2.4",
    "vue": "^3.5.20"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
